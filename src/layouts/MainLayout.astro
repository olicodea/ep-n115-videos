---
import Dialog from "@/components/Dialog.astro";
import "../styles/global.css";
const { title, videoSRC, qrSRC } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>E.P. N°115 - {title}</title>
  </head>
  <body
    class="container mx-auto px-4 flex flex-col gap-6 lg:gap-3 justify-between min-h-screen bg-[var(--primary)]"
  >
    <header class="flex flex-col items-center py-3 gap-4">
      <div class="flex flex-col lg:flex-row items-center gap-1 lg:gap-2">
        <h1 class="text-xl lg:text-2xl font-bold text-white">
          E.P. N°115: 3°A / 3°B
        </h1>
        <h2 class="text-lg lg:text-2xl text-white lg:font-bold">
          <span class="hidden lg:inline">-</span>
          {title}
        </h2>
      </div>
      <nav class="flex items-center gap-6">
        <a href="/" class="btn-primary">Insecticida</a>
        <a href="/compost" class="btn-primary">Compost</a>
      </nav>
    </header>
    <!-- etiquetas semanticas para mostrar el videoi -->
    <main class="w-full">
      <section
        class="w-full flex flex-col gap-4 items-center md:justify-center"
      >
        <video
          class="rounded-lg w-full lg:w-1/2"
          src={videoSRC}
          controls
          autoplay
        >
        </video>
        <button class="btn-secondary cursor-pointer" id="show-dialog">
          VER QR
        </button>
      </section>
    </main>

    <footer class="py-3">
      <p class="text-center text-sm text-white">
        Copyright © <span id="year"></span> - E.P. N°115 - 3°A / 3°B
      </p>
    </footer>
    <Dialog title="Código QR" qrSRC={qrSRC} id="QR-dialog" />
  </body>

  <script>
    const year = new Date().getFullYear();
    document.querySelector("#year")!.textContent = year.toString();

    const showDialog = document.getElementById(
      "show-dialog"
    ) as HTMLButtonElement;
    showDialog.addEventListener("click", () => {
      const dialog = document.getElementById("QR-dialog") as HTMLDialogElement;
      dialog.showModal();
    });
  </script>
</html>
